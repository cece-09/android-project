<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassActivity">
    <LinearLayout
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22.6dp"
            android:adjustViewBounds="true"
            android:maxWidth="500dp"
            android:maxHeight="200dp"
            android:src="@drawable/taxi"/>
        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            tools:text="@string/app_name" />
        <TextView
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:gravity="center_horizontal"
            tools:text="@string/app_description"
            style="@style/text"
            />
        <Button
            android:id="@+id/btn_pass"
            android:layout_marginBottom="17.5dp"
            tools:text="@string/register_start_with_pass"
            style="@style/btn_pass"/>
        <Button
            android:id="@+id/btn_kakao"
            android:layout_marginBottom="17.5dp"
            tools:text="@string/register_start_with_kakao"
            style="@style/btn_kakao"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>